---
const Keyword = "KI Beratung Deutschland"
---

<header>

      
    <div id="nav-icon1">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
        </div>

        <a class="logo_nav" href="/">
        <div class="logo">
          {Keyword}
        </div>
      </a>

        <nav class="nav_menu">
              <ul class="nav_ul">
                    <li><a class="menu_item first" href="/">Home</a></li>
              </ul>
        </nav>




</header>

<style>



#nav-icon1 {
    z-index: 9999;
    width: 40px;
    height: 45px;
    position: absolute;
    top: 15px;
    right: 10px;
    
    margin: 1em;
    overflow: hidden;
  }
  
  #nav-icon1:hover {
    cursor: pointer;
  } 
  
  
  #nav-icon1 span {
    width: 100%;
    height: 5px;
    position: absolute;
    background: #f9c365;
    border-radius: 0px;
    opacity: 1;
    transition: all 0.7s ease;
    display: inline-block
  }
  
  
  #nav-icon1 span:nth-child(1) {
    top: 0px;
    width: 70%;
    transform: translateX(0px);
  }
  
  #nav-icon1 span:nth-child(2) {
    top: 18px;
    transform: rotate(0deg);
  }
  
  #nav-icon1 span:nth-child(3) {
    top: 36px;
    width: 70%;
    right: 0;
    transform: translateX(0px);
  }
  
  #nav-icon1 span:nth-child(4) {
    top: 18px;
    transform: rotate(0deg);
    opacity: 0;
  }
  
  #nav-icon1.open span:nth-child(1) {
    right: 0;
    transform: translateX(100px);
    background: white;
  }
  
  #nav-icon1.open span:nth-child(2) {
    transform: rotate(45deg);
    width: 89%;
    background: white;
  }
  
  #nav-icon1.open span:nth-child(3) {
    left: 0;
    transform: translateX(-100px);
    background: white;
  }
  
  #nav-icon1.open span:nth-child(4) {
    transform: rotate(-45deg);
    width: 89%;
    opacity: 1;
    background: white;
  }
  
  #nav-icon1 {
    display: none;
  }
  
  
  
  
 .logo_nav {
    text-decoration: none;
  }
  
  .logo {
    padding: 8px;
    padding-left: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  
  
  .logo {
    color: #323F4B;
    font-weight: 600;
    font-size: 15px;
    letter-spacing: .7px;
    text-transform: uppercase;
    padding-left: 15px;
  }
  
  .logo span {
    color: #f9c365;
  } 
  

  .logo img {
    padding-right: 5px;
  }
  
  
  
  
  
  header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: 'Jost';
        width: 1060px;
        max-width: 100%;
        margin: 0 auto;
    }
  
    header nav li {
        display: inline;
    }

    .menu_item.first { 
        padding-left: 0;
    }
  
    header nav li a {
        text-decoration: none;
        margin-left: 48px;
        color: #616e7c;
        text-decoration: none;
        font-size: 18px;
        font-family: Recoleta;
    }


    .nav_ul {
        padding-left: 0;
    }
    
    .nav_social {
      display: flex;
      align-items: center;
    }

    .social-img {
        color: #52606D;
        margin-left: 32px;
        display: block;
      }
        
  
      .nav_menu.open_menu {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background-color: #f9c365;
        width: 100vw;
        height: 100vh;
        top: 0;
        overflow: hidden;
        z-index: 999;
      }
  
  
      .nav_menu.open_menu li { 
          display: block;
          padding-top: 1rem;
          text-align: center;
          font-size: 24px;
      }
  
      .nav_menu.open_menu li a  { 
        color: #1d1e1e;
        transform: translateX(300%);
        display: block;
        transition: all .3s ease-in-out;
        margin-left: 0px;
        font-weight: 600;
        letter-spacing: 0.03em;
      }
  
  
      .anotherclass { 
        transform: translateX(0%) !important;
        padding-left: 0;
      }
  
  
      @media only screen and (max-width: 970px) { 
  
        nav {
            display: none;
        }
  
        .nav_social {
            display: none;
        }
  
        #nav-icon1 {
            display: block;
        }
  
  
        header {
          display: block;
          margin-top: 16px !important;
        }
  
        .logo {
          justify-content: flex-start;
          padding-left: 15px;
      }
  
  
  
      }

</style>


<script>


  let navIcon = document.getElementById("nav-icon1");
  let menu = document.querySelector(".nav_menu");
  const allMenu = document.querySelectorAll('.menu_item')

  

  

  navIcon.addEventListener("click", function() {
  
  
  
    this.classList.toggle("open")
    menu.classList.toggle("open_menu")


    allMenu.forEach((element, i) => {
        setTimeout(() => {
            element.classList.toggle("anotherclass");
        }, i * 200);
      });


  });



</script>